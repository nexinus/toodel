<div class="short-banner">
  <div class="home-banner-items">
    <h1>Create a toilet</h1>
    <p>Fill in the form below</p>
  </div>
</div>

<div class="container">
  <div class="row" style="padding-top: 16px">
    <div class="col-12 col-md-8 col-lg-8">
      <%= simple_form_for(toilet) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'd-none', class: 'hidden', id: 'photo-input' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Photo/s Upload' %>
        <%= image_tag "", width: 100, class: "hidden", id: "photo-preview" %>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
      <script>
        // Multiple images preview in browser
        var imagesPreview = function(input, placeToInsertImagePreview) {
            if (input.files) {
                var filesAmount = input.files.length;
                for (i = 0; i < filesAmount; i++) {
                    var reader = new FileReader();
                    reader.onload = function(event) {
                        $($.parseHTML('<img class="preview-img">')).attr('src', event.target.result).appendTo(placeToInsertImagePreview);
                    }
                    reader.readAsDataURL(input.files[i]);
                }
            }
        };
      </script>
    </div>
  </div>
</div>
