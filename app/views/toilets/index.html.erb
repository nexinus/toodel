<div class="home-banner">
  <div class="home-banner-items">
    <p>We have <%= Toilet.count %> toilet/s for you nearby.</p>
    <h1>This is the toilets near you</h1>
  </div>
</div>

<div class="row">
  <% @toilets.each do |toilet| %>
    <div class="card-home">
      <div class="card-service">
        <div class="toilet-card-image" style="background-image: url('<%= toilet.photos %>')"></div>
        <%= toilet.name %>
        <%= toilet.address %>
        <%= link_to 'More info', toilet_path(toilet) %>
      </div>
    </div>
  <% end %>
</div>
